<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="OutlineActionButton" parent="@style/style_text_match">
    <item name="android:layout_height">16dp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:background">@drawable/bg_outline_yellow</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
  </style>

  <style name="style_text_match" parent="style_text_wrap">
    <item name="android:layout_width">match_parent</item>
    <item name="android:gravity">left|center_vertical</item>
  </style>
  <style name="style_text_wrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:gravity">center</item>
    <item name="android:text">@string/app_name</item>
    <item name="android:textSize">14dp</item>
  </style>

  <style name="style_text_input_layout_inputText_white_bg" parent="@style/style_text_match">
    <item name="android:maxLines">1</item>
    <item name="android:background">@drawable/bg_white</item>
    <item name="android:singleLine">true</item>
    <item name="android:paddingTop">4dp</item>
    <item name="android:paddingBottom">4dp</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:text"></item>
  </style>


</resources>