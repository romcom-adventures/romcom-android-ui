<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.modules.login.MobileFragment"
    >

  <androidx.appcompat.widget.AppCompatEditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:id="@+id/mobile_edit_text"
      style="@style/style_text_input_layout_inputText_white_bg"
      android:layout_margin="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      android:hint="Please enter your mobile number"

      />

  <androidx.appcompat.widget.AppCompatEditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_margin="16dp"
      style="@style/style_text_input_layout_inputText_white_bg"
      app:layout_constraintTop_toBottomOf="@id/mobile_edit_text"
      android:enabled="false"
      android:hint="Please enter OTP"
      />
  <androidx.appcompat.widget.AppCompatButton
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      style="@style/OutlineActionButton"
      android:text="Log In"
      android:layout_margin="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      />


</androidx.constraintlayout.widget.ConstraintLayout>